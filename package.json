{
	"name": "besidka",
	"type": "module",
	"packageManager": "pnpm@10.17.1",
	"engines": {
		"node": ">=24"
	},
	"scripts": {
		"build": "ROLLDOWN_OPTIONS_VALIDATION=loose nuxt build",
		"dev": "nuxt dev --dotenv .dev.vars",
		"preview": "pnpm run build && wrangler dev --port 3000",
		"upload": "pnpm run build && wrangler versions upload",
		"deploy": "pnpm run build && wrangler deploy",
		"generate": "nuxt generate",
		"dev:prepare": "nuxt prepare",
		"typecheck": "nuxt typecheck",
		"postinstall": "nuxt prepare",
		"cf-typegen": "wrangler types",
		"lint": "eslint",
		"format": "eslint --fix",
		"test": "vitest",
		"coverage": "vitest run --coverage --passWithNoTests",
		"db:generate": "drizzle-kit generate",
		"db:reset": "rm -rf .wrangler/state/v3/d1 && drizzle-kit generate && pnpx wrangler d1 migrations apply DB",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"prepare": "husky"
	},
	"dependencies": {
		"@ai-sdk/google": "^2.0.16",
		"@ai-sdk/openai": "^2.0.34",
		"@ai-sdk/vue": "^2.0.51",
		"@iconify-json/lucide": "^1.2.68",
		"@nuxt/eslint": "1.4.1",
		"@nuxt/fonts": "0.11.4",
		"@nuxt/icon": "1.13.0",
		"@nuxt/image": "^1.11.0",
		"@nuxtjs/color-mode": "^3.5.2",
		"@nuxtjs/device": "^3.2.4",
		"@nuxtjs/mdc": "^0.17.4",
		"@tailwindcss/vite": "^4.1.13",
		"@vite-pwa/nuxt": "^1.0.4",
		"@vueuse/core": "^13.9.0",
		"@vueuse/nuxt": "^13.9.0",
		"ai": "^5.0.51",
		"better-auth": "^1.3.16",
		"crypto-shield": "^1.6.2",
		"daisyui": "^5.1.18",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.5",
		"drizzle-query-logger": "^1.1.0",
		"eslint": "^9.36.0",
		"hashids": "^2.3.0",
		"nuxt": "^4.1.2",
		"nuxt-svgo": "^4.2.6",
		"remark-breaks": "^4.0.0",
		"resend": "^4.8.0",
		"sanitize-html": "^2.17.0",
		"shiki": "^3.13.0",
		"shiki-stream": "^0.1.2",
		"tailwindcss": "^4.1.13",
		"ulid": "^3.0.1",
		"vue": "^3.5.21",
		"vue-router": "^4.5.1",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250924.0",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@commitlint/format": "^19.8.1",
		"@commitlint/types": "^19.8.1",
		"@nuxt/test-utils": "^3.19.2",
		"@stylistic/eslint-plugin": "^4.4.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.5.2",
		"@types/sanitize-html": "^2.16.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vue/test-utils": "^2.4.6",
		"better-sqlite3": "^12.4.1",
		"conventional-changelog-atom": "^5.0.0",
		"happy-dom": "^17.6.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.0",
		"nitro-cloudflare-dev": "^0.2.2",
		"nitropack": "^2.12.6",
		"rollup-plugin-visualizer": "^6.0.3",
		"typescript": "^5.9.2",
		"vite-plugin-eslint2": "^5.0.4",
		"vitest": "^3.2.4",
		"vue-tsc": "^3.0.8",
		"wrangler": "^4.40.0"
	},
	"onlyBuiltDependencies": [
		"rolldown",
		"@parcel/watcher",
		"@tailwindcss/oxide",
		"better-sqlite3",
		"esbuild",
		"sharp",
		"unrs-resolver",
		"workerd"
	],
	"overrides": {
		"vite": "npm:rolldown-vite@latest"
	},
	"lint-staged": {
		"*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,vue}": [
			"eslint --fix",
			"vitest related --run --passWithNoTests"
		]
	}
}